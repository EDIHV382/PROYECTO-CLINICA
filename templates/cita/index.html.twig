{% extends 'baseClinica.html.twig' %}

{% block title %}Gestión de Citas{% endblock %}

{% block body %}
{# Contenedor para notificaciones y mensajes flash #}
<div id="notification-container" style="position: fixed; top: 85px; right: 1rem; z-index: 1056;"></div>
<script id="flash-messages-data" type="application/json">{{ app.flashes|json_encode|raw }}</script>

<div class="container-fluid py-5">
    <div class="row g-4 command-center-layout">
        {# --- Sidebar de Acciones para Citas --- #}
        <div class="col-lg-3">
             <div class="command-sidebar">
                <h4 class="sidebar-title mb-4">Gestión Rápida</h4>
                <button type="button" class="btn btn-primary w-100 mb-4 py-2" data-bs-toggle="modal" data-bs-target="#modalRegistrarCita">
                    <i class="mdi mdi-calendar-plus me-2"></i> Nueva Cita
                </button>
                <div class="sidebar-section">
                    <h6 class="section-heading">Estadísticas</h6>
                    <ul class="list-unstyled sidebar-stats">
                        <li>
                            <span>Total de Citas:</span>
                            <span class="fw-bold text-primary">{{ citas.getTotalItemCount }}</span>
                        </li>
                         {# Aquí puedes añadir más estadísticas de citas en el futuro #}
                    </ul>
                </div>
            </div>
        </div>
        
        {# --- Contenido Principal: Lista de Citas --- #}
        <div class="col-lg-9">
            <div class="main-content-card">
                 <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h5 class="card-title mb-0">Lista Detallada de Citas</h5>
                    <div class="input-group search-input-group">
                        <input type="text" id="buscador-citas" class="form-control" placeholder="Buscar por paciente...">
                        <span class="input-group-text"><i class="mdi mdi-magnify"></i></span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0 command-table">
                            <thead>
                                <tr>
                                    <th>Fecha y Hora</th>
                                    <th>Paciente</th>
                                    <th>Asistió</th>
                                    <th>Registrado Por</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="citas-table-body">
                            {% for cita in citas %}
                                {{ include('cita/_citaFila.html.twig', {'cita': cita}) }}
                            {% else %}
                                <tr id="no-citas-row">
                                    <td colspan="5" class="text-center py-5">
                                        <i class="mdi mdi-calendar-remove-outline mdi-36px d-block mb-2"></i>
                                        No se encontraron Citas.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    {{ knp_pagination_render(citas) }}
                </div>
            </div>
        </div>
    </div>
</div>

{# --- Contenedor de Modales --- #}
<div id="modals-citas-container">
    {% include 'cita/modals/registrarCita.html.twig' %}
    
    {% for cita in citas %}
        {% include 'cita/modals/editarCita.html.twig' with {'cita': cita, 'form': formsEditar[cita.id]} %}
    {% endfor %}

    {% include 'cita/modals/eliminarCita.html.twig' %}
</div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app-clinica') }}
{% endblock %}