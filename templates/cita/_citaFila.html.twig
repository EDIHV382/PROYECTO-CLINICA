<tr id="cita-row-{{ cita.id }}">
    <td class="fw-semibold">{{ cita.fecha ? cita.fecha|date('d/m/Y H:i') : '-' }}</td>
    <td>{{ cita.paciente ? cita.paciente.nombre : '-' }}</td>
    <td>
        {% if cita.asistio %}
            <span class="status-badge status-badge-success">SÃ­</span>
        {% else %}
            <span class="status-badge status-badge-secondary">No</span>
        {% endif %}
    </td>
    <td>{{ cita.editadoPor ? cita.editadoPor.name : '-' }}</td>
    <td class="text-end">
        <div class="dropdown">
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Acciones">
                <i class="mdi mdi-dots-vertical"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalEditarCita-{{ cita.id }}">
                        <i class="mdi mdi-pencil me-2"></i> Editar
                    </a>
                </li>
                <li>
                    <button type="button" class="dropdown-item text-danger delete-cita-btn"
                            data-cita-info="la cita de <strong>{{ cita.paciente.nombre }}</strong> del {{ cita.fecha|date('d/m/Y') }}"
                            data-delete-url="{{ path('app_cita_eliminar', {'id': cita.id}) }}"
                            data-csrf-token="{{ csrf_token('eliminar' ~ cita.id) }}">
                        <i class="mdi mdi-delete me-2"></i> Eliminar
                    </button>
                </li>
            </ul>
        </div>
    </td>
</tr>