{% extends 'baseClinica.html.twig' %}

{% block title %}Gestión de Publicaciones del Blog{% endblock %}

{% block body %}
<div id="notification-container" style="position: fixed; top: 85px; right: 1rem; z-index: 1056;"></div>
<script id="flash-messages-data" type="application/json">{{ app.flashes|json_encode|raw }}</script>

<div class="container-fluid py-5">
    <div class="row g-4 command-center-layout">
        <div class="col-lg-3">
             <div class="command-sidebar">
                <h4 class="sidebar-title mb-4">Gestión del Blog</h4>
                <button type="button" class="btn btn-primary w-100 mb-4 py-2" data-bs-toggle="modal" data-bs-target="#modalRegistrarPost">
                    <i class="mdi mdi-plus me-2"></i> Nueva Publicación
                </button>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="main-content-card">
                 <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h5 class="card-title mb-0">Publicaciones Existentes</h5>
                     <div class="input-group search-input-group" style="max-width: 300px;">
                        <input type="text" id="buscador-posts" class="form-control" placeholder="Buscar publicación...">
                        <span class="input-group-text"><i class="mdi mdi-magnify"></i></span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0 command-table">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Imagen</th>
                                    <th>Categoría</th>
                                    <th>Habilitado</th>
                                    <th>Creado</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="blog-table-body">
                            {% for post in posts %}
                                {{ include('blog_post/_postFila.html.twig', {'post': post}) }}
                            {% else %}
                                <tr id="no-posts-row">
                                    <td colspan="6" class="text-center text-muted py-5">
                                        <i class="mdi mdi-post-outline mdi-36px d-block mb-2"></i>
                                        No se encontraron publicaciones.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    {{ knp_pagination_render(posts) }}
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modals-blog-container">
    {% include 'blog_post/modals/registrarPost.html.twig' %}
    {% for post in posts %}
        {% include 'blog_post/modals/editarPost.html.twig' with {'post': post, 'form': formsEditar[post.id]} %}
    {% endfor %}
    {% include 'blog_post/modals/eliminarPost.html.twig' %}
</div>
{% endblock %}