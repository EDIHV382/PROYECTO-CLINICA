{% extends 'baseClinica.html.twig' %}

{% block title %}Gestión de Pacientes{% endblock %}

{% block body %}
<div id="notification-container" style="position: fixed; top: 85px; right: 1rem; z-index: 1056;"></div>
<script id="flash-messages-data" type="application/json">{{ app.flashes|json_encode|raw }}</script>
    
<div class="container-fluid py-5">
    <div class="row g-4 command-center-layout">
        <div class="col-lg-3">
             <div class="command-sidebar">
                <h4 class="sidebar-title mb-4">Gestión Rápida</h4>
                <button type="button" class="btn btn-primary w-100 mb-4 py-2" data-bs-toggle="modal" data-bs-target="#modalRegistrarPaciente">
                    <i class="mdi mdi-account-plus me-2"></i> Nuevo Paciente
                </button>
                <div class="sidebar-section">
                    <h6 class="section-heading">Estadísticas</h6>
                    <ul class="list-unstyled sidebar-stats">
                        <li>
                            <span>Total Pacientes:</span>
                            <span class="fw-bold text-primary">{{ pacientes.getTotalItemCount }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="main-content-card">
                 <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h5 class="card-title mb-0">Lista Detallada de Pacientes</h5>
                    <div class="input-group search-input-group">
                        <input type="text" id="buscador-pacientes" class="form-control" placeholder="Buscar paciente...">
                        <span class="input-group-text"><i class="mdi mdi-magnify"></i></span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0 command-table">
                            <thead>
                                <tr>
                                    <th>Nombre Completo</th>
                                    <th>Fecha de Nacimiento</th>
                                    <th>Sexo</th>
                                    <th>Teléfono</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="pacientes-table-body">
                            {% for paciente in pacientes %}
                                {{ include('paciente/_pacienteFila.html.twig', {'paciente': paciente}) }}
                            {% else %}
                                <tr id="no-pacientes-row">
                                    <td colspan="5" class="text-center text-muted py-5">
                                        <i class="mdi mdi-account-off-outline mdi-36px d-block mb-2"></i>
                                        No se encontraron pacientes.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    {{ knp_pagination_render(pacientes) }}
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modals-pacientes-container">
    {% include 'paciente/modals/registrarPaciente.html.twig' %}
    
    {% for paciente in pacientes %}
        {% include 'paciente/modals/editarPaciente.html.twig' with {'paciente': paciente, 'form': formsEditar[paciente.id]} %}
    {% endfor %}

    {% include 'paciente/modals/eliminarPaciente.html.twig' %}
</div>
{% endblock %}