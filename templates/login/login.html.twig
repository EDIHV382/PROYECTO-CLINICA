{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
<section class="h-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3">
                    <div class="row g-0 bg-dark text-white">
                        <!-- Formulario -->
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="text-center">
                                    <img src="{{ asset('images/logo.png') }}" style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">Bienvenido de nuevo</h4>
                                </div>

                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            Ya estás conectado como {{ app.user.userIdentifier }},
                                            <a href="{{ path('app_logout') }}">Cerrar sesión</a>
                                        </div>
                                    {% endif %}

                                    <p>Por favor, inicia sesión en tu cuenta</p>

                                    <div class="form-outline mb-4">
                                        <input type="email" id="username" name="_username" class="form-control" value="{{ last_username }}" autocomplete="email" required autofocus>
                                        <label class="form-label" for="username">Correo electrónico</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="password" name="_password" class="form-control" autocomplete="current-password" required>
                                        <label class="form-label" for="password">Contraseña</label>
                                    </div>

                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block mb-6" type="submit">Iniciar sesión</button>
                                    </div>

                                </form>
                            </div>
                        </div>

                        <!-- Información extra -->
                        <div class="col-lg-6 d-flex align-items-center bg-dark text-white">
                            <div class="px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Más que solo una plataforma</h4>
                                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
</section>
{% endblock %}
