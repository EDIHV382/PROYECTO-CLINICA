<div class="modal fade" id="modalRegistrarGasto" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            {{ form_start(formRegistrarGasto, {'attr': {'id': 'form-registrar-gasto'}}) }}
            <div class="modal-header">
                <h5 class="modal-title">Registrar Gasto de Caja</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12">{{ form_row(formRegistrarGasto.monto) }}</div>
                    <div class="col-12">{{ form_row(formRegistrarGasto.descripcion) }}</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary">Guardar Gasto</button>
            </div>
            {{ form_end(formRegistrarGasto) }}
        </div>
    </div>
</div>